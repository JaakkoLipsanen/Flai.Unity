<Window x:Class="Flai.Unity.CopyDLL.AddNewItemDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AddNewItemDialog" Height="100" Width="300" ResizeMode="NoResize" Topmost="True" ShowInTaskbar="False" WindowStyle="SingleBorderWindow" >
    <Grid Margin="4">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Label Grid.Column="0">Name:</Label>
            <TextBox Margin="0 2" Grid.Column="1" x:Name="_nameTextBox" >Hello</TextBox>
        </Grid>

        <Grid Grid.Row="1" Margin="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />


            </Grid.ColumnDefinitions>
            <Button Click="OnOKClicked"  Margin="4 0" Grid.Column="0">OK</Button>
            <Button Click="OnCancelClicked" Margin="4 0" Grid.Column="1">Cancel</Button>
        </Grid>
    </Grid>
</Window>
